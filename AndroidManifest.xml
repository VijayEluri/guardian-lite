<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
   	package="nz.gen.wellington.guardian.android" android:versionName="1.13" android:versionCode="14">
   	
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false">
     	     
        <activity android:label="@string/app_name" android:name=".activities.main"  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
      	
    	<activity android:label="View Article" android:name=".activities.article" >
    		<intent-filter>
    		</intent-filter>
		</activity>

		<activity android:label="Sections" android:name=".activities.sections"  >
			<intent-filter>
			</intent-filter>
		</activity>

		<activity android:name=".activities.section"  ><intent-filter></intent-filter>
		</activity>

		<activity android:name=".activities.sync" ></activity>

		<service android:name=".services.ContentUpdateService" android:enabled="true"></service>
		
		<activity android:name=".activities.keyword"  ></activity>
		<activity android:name=".activities.perferences" ></activity>
		<activity android:name=".activities.favourites" ></activity>
		<activity android:name=".activities.notification" android:noHistory="true"></activity>
		<activity android:name=".activities.tagsearch" ></activity>

		<receiver android:name=".activities.TimedSyncAlarmReceiver"></receiver>
		
		
		<receiver android:name=".widgets.TopStoriesWidget" android:label="@string/widget_name">
		    <intent-filter>
    		    <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    		</intent-filter>
    		<meta-data android:name="android.appwidget.provider" android:resource="@xml/widget" />
		</receiver>
				
		<receiver android:name=".widgets.FavouriteStoriesWidget" android:label="@string/favourites_widget_name">
		    <intent-filter>
    		    <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    		</intent-filter>
    		<meta-data android:name="android.appwidget.provider" android:resource="@xml/widget" />
		</receiver>
				
	</application>
	
	<uses-sdk android:minSdkVersion="3" />
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
	
</manifest> 