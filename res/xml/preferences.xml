<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">

<ListPreference android:entryValues="@array/pageSizeOptionValues" android:entries="@array/pageSizeOptionLabels" android:summary="Number of articles to include in each article set" android:title="Page size" android:key="pageSize" android:defaultValue="10"></ListPreference>

<ListPreference android:entryValues="@array/largeImageOptionValues" android:entries="@array/largeImageOptionLabels" 
android:summary="When should large article images be downloaded" android:title="Load large images" android:key="largeImagesOption" android:defaultValue="WIFI_ONLY"></ListPreference>

<ListPreference android:entryValues="@array/syncTypeOptionValues" android:entries="@array/syncTypeOptionLabels" 
android:summary="When to automatically download top stories and favourites (requires background data)" android:title="Automatic syncing" android:key="syncType" android:defaultValue="NEVER"></ListPreference>

<ListPreference android:entryValues="@array/fontBaseSizeOptionValues" android:entries="@array/fontBaseSizeOptionLabels" android:summary="Preferred body text size" android:title="Font size" android:key="baseFontSize" android:defaultValue="7"></ListPreference>

<ListPreference android:entryValues="@array/apiLocationValues" android:entries="@array/apiLocationLabels" 
android:summary="Content API location to use" android:title="Content API location" 
android:key="apiLocation" android:defaultValue="http://guardian-lite.appspot.com"></ListPreference>

</PreferenceScreen>