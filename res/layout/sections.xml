<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent" android:id="@+id/Main">
    
<LinearLayout android:layout_height="wrap_content" android:id="@+id/HeadingLayout" android:layout_width="fill_parent">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingBottom="2px" android:paddingLeft="2px" android:paddingTop="2px" android:textStyle="bold" android:id="@+id/Heading" android:textColor="#fff" android:textSize="7pt"></TextView>
</LinearLayout>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/DownloadProgress" android:visibility="gone" android:textSize="7pt" android:paddingLeft="5px" android:paddingRight="5px"></TextView>

<ScrollView android:id="@+id/ScrollView01" android:layout_height="wrap_content" android:layout_width="fill_parent" android:paddingLeft="5px" android:paddingRight="5px">
<LinearLayout android:layout_height="wrap_content" android:id="@+id/MainPane" android:orientation="vertical" android:layout_width="wrap_content"></LinearLayout>
</ScrollView>
  

</LinearLayout>
